from __future__ import print_function
import sys
import getpass

import mygpoclient

from mygpoclient import api

def usage():
    print("""
    Usage: python %s {username} [host]
    """ % (sys.argv[0],), file=sys.stderr)
    sys.exit(1)

if __name__ == '__main__':
    # Use the default host if not specified
    if len(sys.argv) == 2:
        sys.argv.append(mygpoclient.HOST)

    # Check for valid arguments
    if len(sys.argv) != 3:
        usage()

    # Split arguments in local variables
    progname, username, host = sys.argv

    # Read password from the terminal
    password = getpass.getpass("%s@%s's password: " % (username, host))

    # Create the client object with username/password/host set
    client = api.MygPodderClient(username, password, host)

    for device in client.get_devices():
        print(device)
        for podcast in client.get_subscriptions(device):
            print('  ' + podcast)
        print('-'*50)

